<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/VLO_ID"
        android:layout_width="122dp"
        android:layout_height="32dp"
        android:text="VLO"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/DMCI_ID"
        android:layout_width="118dp"
        android:layout_height="32dp"
        android:layout_marginStart="1dp"
        android:text="DMCI"
        android:textAlignment="center"
        app:layout_constraintEnd_toStartOf="@+id/rooster_id"
        app:layout_constraintStart_toEndOf="@+id/VLO_ID"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/rooster_id"
        android:layout_width="146dp"
        android:layout_height="32dp"
        android:text="Roosters"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/DMCI_ID"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/add_button"
        android:layout_width="103dp"
        android:layout_height="52dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</android.support.constraint.ConstraintLayout>